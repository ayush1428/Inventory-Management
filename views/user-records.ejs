              records
            </button>
          </li>

          <li class="sidebar-list-item">
            <button class="button">
              <span class="material-icons-outlined">settings</span> Settings
            </button>
          </li>

          <li class="sidebar-list-item">
            <button class="button" onclick="redirectToHomePage()">
              <span class="material-icons-outlined">groups</span> Home Page
            </button>
          </li>
        </ul>
      </aside>
      <!-- End Sidebar -->

      <!-- Main -->
      <main class="main-container">
        <div class="main-title">
          <h2>List of borrowed items</h2>
        </div>

        <table class="table table-striped" style="margin-top: 25px">
          <thead>
            <tr>
              <!-- <th scope="col">SR No</th> -->
              <th scope="col">Borrowed Equipment</th>
              <th scope="col">Quantity</th>
              <th scope="col">Borrowed on</th>
              <th scope="col">Return Date</th>
            </tr>
          </thead>
          <tbody>
            <% userRecords.forEach((record) => { %>
            <tr>
              <td><%= record.assignedEq %></td>
              <td><%= record.requiredQuantity %></td>
              <td><%= record.assignedDate.toLocaleDateString() %></td>
              <td><%= record.returnDate.toLocaleDateString() %></td>
            </tr>
            <% }); %>
          </tbody>
